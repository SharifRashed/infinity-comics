@model InfinityComics1.Models.ViewModels.ComicBookFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ComicBook</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>          
            <div class="form-group">
                <label asp-for="ComicBook.Title" class="control-label"></label>
                <input asp-for="ComicBook.Title" class="form-control" />
                <span asp-validation-for="ComicBook.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComicBook.Description" class="control-label"></label>
                <input asp-for="ComicBook.Description" class="form-control" />
                <span asp-validation-for="ComicBook.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComicBook.IssueNumber" class="control-label"></label>
                <input asp-for="ComicBook.IssueNumber" class="form-control" />
                <span asp-validation-for="ComicBook.IssueNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComicBook.DateAdded" class="control-label"></label>
                <input asp-for="ComicBook.DateAdded" class="form-control" />
                <span asp-validation-for="ComicBook.DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="ComicBook.AuthorId" class="control-label"></label>
                    <select asp-for="ComicBook.AuthorId" class="form-control">
                        @foreach (var author in Model.Authors)
                        {
                            <option value="@author.Id">@author.Name</option>
                        }
                    </select>
                    <span asp-validation-for="ComicBook.AuthorId" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
