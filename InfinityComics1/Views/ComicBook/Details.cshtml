<form asp-action="SaveComicBookTags" asp-route-id="@Model.ComicBook.Id" method="post">
    <div class="form-group">
        <label asp-for="SelectedTagIds" class="control-label"></label>
        <select multiple asp-for="SelectedTagIds" class="form-control">
                @foreach (var tag in Model.Tags)
                {
                  

                <option value="@tag.Id">@tag.TagName</option>
                }
        </select>
        <span asp-validation-for="@Model.SelectedTagIds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

